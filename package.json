{
  "name": "drupal-decoupled-app",
  "version": "1.0.0",
  "description": "React, Relay & Redux Prototype with Server-Side Rendering.",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "babel-relay-plugin": "^0.7.3",
    "compression": "^1.6.1",
    "connect-history-api-fallback": "^1.1.0",
    "express": "^4.13.4",
    "graphql": "0.4.18",
    "history": "^2.0.0",
    "html-webpack-plugin": "^2.15.0",
    "http-proxy-middleware": "^0.13.0",
    "immutable": "^3.7.6",
    "isomorphic-relay": "^0.5.4",
    "isomorphic-relay-router": "^0.6.3",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-pure-render": "^1.0.2",
    "react-redux": "^4.0.6",
    "react-relay": "^0.7.3",
    "react-router": "^2.0.0-rc5",
    "react-router-redux": "^4.0.0",
    "react-router-relay": "^0.9.5",
    "redux": "^3.0.5",
    "redux-immutable": "^3.0.3",
    "redux-saga": "^0.9.1",
    "reselect": "^2.0.2",
    "scroll-behavior": "^0.3.2",
    "sync-request": "^3.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.1",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-relay-plugin": "^0.7.3",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.1",
    "cheerio": "^0.20.0",
    "coveralls": "^2.11.6",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "enzyme": "^1.5.0",
    "eslint": "^2.0.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-react": "^4.2.1",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.13.4",
    "expect-jsx": "^2.2.2",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.0",
    "imports-loader": "^0.6.5",
    "ip": "^1.1.0",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "jscs": "^2.11.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-coverage": "^0.5.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-ie-launcher": "^0.2.0",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-safari-launcher": "^0.1.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "lint-staged": "^0.1.1",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "null-loader": "^0.1.1",
    "offline-plugin": "^2.0.2",
    "plop": "^1.4.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.8.0",
    "postcss-reporter": "^1.3.0",
    "psi": "^2.0.2",
    "react-addons-test-utils": "^0.14.6",
    "redbox-react": "^1.2.2",
    "rimraf": "^2.5.2",
    "shelljs": "^0.6.0",
    "sinon": "^1.17.3",
    "style-loader": "^0.13.0",
    "stylelint": "^4.1.0",
    "stylelint-config-standard": "^3.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.11",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/fubhy/drupal-decoupled-app.git"
  },
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "npm run build:prod:server && npm run build:prod:client",
    "build:prod:server": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.server.js --colors",
    "build:prod:client": "cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.js --colors",
    "build:dev": "npm run build:dev:server && npm run build:dev:client",
    "build:dev:server": "cross-env NODE_ENV=development webpack --config internals/webpack/webpack.dev.server.js --colors",
    "build:dev:client": "cross-env NODE_ENV=development webpack --config internals/webpack/webpack.dev.js --colors",
    "build:clean": "rimraf build/*",
    "prebuild:prod": "npm run build:clean",
    "prebuild:dev": "npm run build:clean",
    "serve": "npm run start:prod",
    "start": "npm run start:dev",
    "start:dev": "npm run build:dev && NODE_ENV=development node server",
    "start:prod": "npm run build:prod && NODE_ENV=production node server",
    "pagespeed": "node ./internals/scripts/pagespeed.js",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "npm run lint:eslint && npm run lint:jscs",
    "lint:js:staged": "npm run lint:eslint:staged",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "lint:eslint:staged": "eslint-staged",
    "lint:jscs": "jscs .",
    "lint:css": "stylelint ./app/**/*.css",
    "lint:css:staged": "stylelint-staged",
    "lint:staged": "npm run lint:js:staged && npm run lint:css:staged",
    "test": "cross-env NODE_ENV=test karma start internals/testing/karma.conf.js --single-run",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "test:firefox": "npm run test -- --browsers Firefox",
    "test:safari": "npm run test -- --browsers Safari",
    "test:ie": "npm run test -- --browsers IE",
    "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
  },
  "pre-commit": "lint:staged",
  "author": "Sebastian Siemssen",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "praserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "comma-dangle": [2, "always-multiline"],
      "indent": [2, 2, {
        "SwitchCase": 1
      }],
      "no-console": 0,
      "react/prop-types": 0,
      "max-len": 0,
      "prefer-template": 0,
      "no-use-before-define": 0,
      "newline-per-chained-call": 0,
      "arrow-body-style": [2, "as-needed"]
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DEVELOPMENT__": true,
      "__PRODUCTION__": true
    }
  },
  "jscsConfig": {
    "preset": "airbnb",
    "esnext": true,
    "validateQuoteMarks": null,
    "requireTrailingComma": null,
    "maximumLineLength": null,
    "maxErrors": null,
    "requireCamelCaseOrUpperCaseIdentifiers": null,
    "requireShorthandArrowFunctions": null,
    "excludeFiles": [
      "build/**",
      "coverage/**",
      "docs/**",
      "node_modules/**"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "upper",
      "string-quotes": "single",
      "indentation": 2
    }
  }
}

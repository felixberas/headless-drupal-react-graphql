{
  "private": true,
  "entry": {
    "client": "entry/client",
    "server": "entry/server"
  },
  "scripts": {
    "dev": "react-scripts dev",
    "build": "react-scripts build",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:watch": "yarn run test -- --watch",
    "flow": "flow",
    "lint": "react-scripts lint",
    "lint:fix": "react-scripts lint --fix",
    "prettier": "prettier --trailing-comma all --single-quote --write",
    "format": "yarn run prettier -- 'app/**/*.js' && yarn run lint:fix",
    "persist": "node bin/update-persistgraphql",
    "introspect": "node bin/update-introspection",
    "precommit": "lint-staged && node bin/precommit"
  },
  "lint-staged": {
    "linters": {
      "frontend/app/**/*.js": [
        "prettier",
        "lint:fix",
        "git add"
      ]
    },
    "gitDir": "../"
  },
  "dependencies": {
    "apollo-client": "^1.7.0",
    "compression": "^1.6.2",
    "express": "^4.15.3",
    "fetch-everywhere": "^1.0.5",
    "graphql-anywhere": "^3.1.0",
    "graphql-tag": "^2.4.2",
    "persistgraphql": "^0.3.2",
    "ramda": "^0.24.1",
    "react": "^15.6.1",
    "react-apollo": "^1.4.2",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "next",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-universal-component": "^1.4.1",
    "recompose": "^0.23.5",
    "redux": "^3.7.1",
    "reselect": "^3.0.1",
    "serialize-javascript": "^1.3.0",
    "styled-components": "^2.1.1",
    "styled-normalize": "^2.0.1",
    "webpack-flush-chunks": "^1.1.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@amazee/react-scripts": "^2.0.1",
    "flow-bin": "^0.49.1",
    "jssha": "^2.3.1",
    "lint-staged": "^4.0.0",
    "prettier": "^1.5.2",
    "sync-request": "^4.1.0"
  },
  "engines": {
    "node": "v8"
  }
}
